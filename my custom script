local groupId = 10261023
local rankNames = {
    "Trainee", "Junior Operator", "Senior Operator", "Head Operator", "Shift Leader", "Junior Director", "Senior Director", "Head Director", "Corporate Intern", 
    "Junior Corporate", "Senior Corporate", "Head Corporate", "Chief Human Resources Officer",
    "Chief Public Relations Officer", "Chief Operating Officer", "Chief Administrative Officer",
    "Developer", "Vice Chairman", "Chairman"
}

local function sendNotification(title, message)
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = title,
        Text = message,
        Duration = 10
    })
end

game.Players.PlayerAdded:Connect(function(player)
    local success, rank = pcall(function()
        return player:GetRoleInGroup(groupId)
    end)

    if success then
        for _, hrRank in ipairs(rankNames) do
            if hrRank == rank then
                sendNotification("HR SCAN", player.Name .. " (" .. rank .. ") has joined the game. WATCH OUT!")
                break
            end
        end
    end
end)

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Made by npc", "DarkTheme")
local Tab = Window:NewTab("Main Page")
local Section = Tab:NewSection("Main Page")

Section:NewButton("Test Notification", "ButtonInfo", function()
    sendNotification("Test Notification", "This is a test notification.")
end)

Section:NewButton("Fling All", "ButtonInfo", function()
    flingAll()
end)

Section:NewButton("Fling Script", "ButtonInfo", function()
    loadstring(game:HttpGet(('https://raw.githubusercontent.com/0Ben1/fe/main/obf_rf6iQURzu1fqrytcnLBAvW34C9N55kS9g9G3CKz086rC47M6632sEd4ZZYB0AYgV.lua.txt'),true))()
end)

Section:NewButton("Infinite Yield", "ButtonInfo", function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
end)

-- HR Scan button
Section:NewButton("HR Scan", "ButtonInfo", function()
    local hrPlayers = countHRPlayers()
    if hrPlayers > 0 then
        sendNotification("HR SCAN", "There are " .. hrPlayers .. " HR's in-game.")
    else
        sendNotification("HR SCAN", "No HR's found in-game.")
    end
end)

-- Chat Spammer toggle button (MOVED TO MAIN PAGE)
local spamButton = Section:NewToggle("Spam Discord Invite", "ButtonInfo", function(state)
    isSpamming = state
    if isSpamming then
        spamChat()
    end
end)

